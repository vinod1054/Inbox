<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/RealativeLayout"
    android:background="@color/white"
    android:paddingTop="56dp">



    <LinearLayout
        android:id="@+id/btm"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp"
        android:layout_weight="0"
        android:layout_alignParentBottom="true"
        >

        <ImageButton
            android:id="@+id/contact_icon1"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:gravity="center"
            android:background="@drawable/ic_add_circle_outline_black_48dp"/>

        <EditText
            android:id="@+id/editText"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:layout_width="wrap_content"
            android:hint="Type here..."
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
        <ImageButton
            android:layout_weight="0"
            android:gravity="center"
            android:background="@color/white"
            android:layout_gravity="center"
            android:src="@drawable/ic_send_black_48dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_above="@id/btm"

        >
            <LinearLayout
                android:id="@+id/chatrootlayout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </LinearLayout>

    </ScrollView>




</RelativeLayout>